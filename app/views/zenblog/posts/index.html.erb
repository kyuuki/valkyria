<% content_for :title, "Blog" %>

<% content_for :menu_setting do %>
  <% @menu = :home %>
<% end %>

<% content_for :breadcrumbs_setting do %>
  <% @breadcrumbs = [
       [ "Home", root_path ],
       [ "Blog", nil ],
     ] %>
<% end %>

<div class="container">
  <div class="row">

    <div class="col-lg-8">

      <!-- Blog Posts Section -->
      <section id="blog-posts" class="blog-posts section">

        <div class="container">
          <div class="row gy-4">

            <%= render partial: "zenblog/posts/post", collection: @posts %>

          </div>
        </div>

      </section><!-- /Blog Posts Section -->

      <!-- Blog Pagination Section -->
      <section id="blog-pagination" class="blog-pagination section">
        <%= paginate @posts, views_prefix: "zenblog" %>
      </section><!-- /Blog Pagination Section -->

    </div>

    <%= render "zenblog/posts/blog_sidebar" %>

  </div>
</div>
